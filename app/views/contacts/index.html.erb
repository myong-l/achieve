<div class="content">
  <h1>お問い合わせフォーム</h1>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for(@contact) do |f| %>
  <div class="explanation">
    <div class="field">
      <p><%= f.label :title %></p>
      <p><%= f.text_field :title %></p>
    </div>
    <div class="field">
      <p><%= f.label :content %></p>
      <p><%= f.text_area :content %></p>
    </div>
    <div class="field">
      <p><%= f.label :tel %></p>
      <p><%= f.text_field :tel %></p>
    </div>
    <div class="field">
      <p><%= f.label :email %></p>
      <p><%= f.email_field :email %></p>
    </div>
    <div class="field">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', root_path, class: "btn btn-default" %>
    </div>
  <% end %>
  </div>
</div>
